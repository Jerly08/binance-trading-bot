{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npx react-scripts build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 